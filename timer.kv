#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import NavigationDrawer kivy.garden.navigationdrawer.NavigationDrawer
#:set connected 'Bluetooth Status: \nConnected'
#:set disconnected 'Bluetooth Status: \nDisonnected'

<CustomButton@Button>:
    font_size: 32

<RootWidget>:
    NavigationDrawer:
        id: main
        anim_type: 'fade_in'
        BoxLayout:
            orientation: 'vertical'
            Image:
                source:'bt-logo.PNG'
            Button:
                text: 'Timer'
                on_press:
                    screen_manager.current = 'timer_screen'
                    main.toggle_state()
            Button:
                text: 'Settings'
                on_press:
                    app.open_settings()
                    main.toggle_state()
            Button:
                text: 'About'
                on_press:
                    screen_manager.current = 'about_screen'
                    main.toggle_state()
            Label:
                text: connected
                #if app._btclient.connection_status() else disconnected
                #halign: 'center'
                #valign: 'middle'

        ScreenManager:
            id: screen_manager
            transition: NoTransition()

            Screen:
                name: 'timer_screen'
                GridLayout:
                    id: timer
                    display: entry
                    rows: 5
                    padding: 10
                    spacing: 10
                    size: self.size
                    pos: self.pos

                    BoxLayout:
                        TextInput:
                            id: entry
                            hint_text: '00:00:00'
                            font_size: 72
                            multiline: False
                            padding: [240, ( self.height - self.line_height ) / 2]
                            background_color: [0,0,0,1]
                            foreground_color: [1,1,1,1]

                    BoxLayout:
                        spacing: 10
                        CustomButton:
                            text: "7"
                            on_press: root.add_number(self.text)
                        CustomButton:
                            text: "8"
                            on_press: root.add_number(self.text)
                        CustomButton:
                            text: "9"
                            on_press: root.add_number(self.text)
                        CustomButton:
                            text: "Start"
                            on_press: root.start_timer(12)

                    BoxLayout:
                        spacing: 10
                        CustomButton:
                            text: "4"
                            on_press: root.add_number(self.text)
                        CustomButton:
                            text: "5"
                            on_press: root.add_number(self.text)
                        CustomButton:
                            text: "6"
                            on_press: root.add_number(self.text)
                        CustomButton:
                            text: "Stop"
                            on_press: root.stop_timer(12)

                    BoxLayout:
                        spacing: 10
                        CustomButton:
                            text: "1"
                            on_press: root.add_number(self.text)
                        CustomButton:
                            text: "2"
                            on_press: root.add_number(self.text)
                        CustomButton:
                            text: "3"
                            on_press: root.add_number(self.text)
                        CustomButton:
                            text: "CLR"
                            on_press: entry.text = ""

                    BoxLayout:
                        spacing: 10
                        CustomButton:
                            text: "0"
                            size_hint: (0.752, 1)
                            on_press: root.add_number(self.text)
                        CustomButton:
                            text: "Menu"
                            size_hint: (0.243, 1)
                            on_press: main.toggle_state()

            Screen:
                name: 'settings_screen'


            Screen:
                name: 'about_screen'
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        halign: 'center'
                        valign: 'middle'
                        text: "Bluetooth \nPresentation Timer"
                        font_size: 64
                    Label:
                        halign: 'center'
                        valign: 'middle'
                        text:'This software was created using Kivy and Python. \nIt is open source software that is used to control the Bluetooth Presentation Timer \nwhich was built for Senior Design 2 Project at Florida International University.'
                    Label:
                        halign: 'center'
                        valign: 'middle'
                        text: "Team 18: \n Anthony Perez \n Jose Martinez \n Javier Rodriguez \n Michael Montalvan"

                    AnchorLayout:
                        anchor_x: 'right'
                        anchor_y: 'bottom'

                        Label:
                            halign: 'center'
                            valign: 'middle'
                            text: "Mentor: Dr. Alexander Pons"

                        Button:
                            text: "Great"
                            size_hint: (0.1,0.35)
                            on_press: screen_manager.current = 'timer_screen'


